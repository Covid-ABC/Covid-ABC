<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh_layout_news"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/news_header_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/general_space"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="@dimen/very_little_space"
                    android:text="@string/text_news_header"
                    android:textAlignment="center"
                    android:textColor="@color/color1_saphire_blue"
                    android:textSize="20sp"
                    app:fontFamily="sans-serif-light" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_news"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

