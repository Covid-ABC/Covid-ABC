<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/big_space"
    android:gravity="center"
    android:background="@drawable/login_gradient"
    tools:context=".login.ForgotPasswordActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/result_text_view"
        android:layout_weight="0.6"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/text_score"
        android:lineSpacingExtra="@dimen/default_space"
        android:textSize="@dimen/text_huge_size"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_gravity="center"/>




    <Button
        android:id="@+id/quit_quiz_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/general_space"
        android:text="@string/text_quit_quiz"
        android:textColor="@android:color/white"
        android:background="@drawable/button_shape"
        android:layout_marginTop="@dimen/huge_space"/>

</LinearLayout>
