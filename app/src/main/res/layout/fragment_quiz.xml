<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/quiz_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerVertical="true"
            android:src="@drawable/brain"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/quiz_introText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quiz_image"
            android:gravity="center_horizontal"
            android:text="@string/quiz_intro"
            android:textAlignment="center" />

        <Button
            android:id="@+id/quiz_enterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quiz_introText"
            android:layout_centerHorizontal="true"
            android:text="@string/quiz_enter"
            android:onClick="iniciarQuiz"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>