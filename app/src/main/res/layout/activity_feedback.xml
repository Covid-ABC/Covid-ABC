<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/big_space"
    android:gravity="center"
    android:background="@drawable/login_gradient"
    tools:context=".login.ForgotPasswordActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        app:fontFamily="sans-serif-medium"
        android:text="@string/text_feedback"
        android:textSize="@dimen/text_big_size"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        app:fontFamily="sans-serif-light"
        android:text="@string/text_feedback_description"
        android:textSize="@dimen/text_default_size"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"/>

    <EditText
        android:id="@+id/feedback_edit_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:background="@drawable/edit_text_normal"
        android:padding="@dimen/default_space"
        android:gravity="top"
        app:fontFamily="sans-serif-light"
        android:textColor="@color/color1_saphire_blue"
        android:textSize="@dimen/text_default_size"
        android:inputType="textMultiLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="center">
        <Button
            android:id="@+id/send_feedback_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="@string/text_send"
            android:background="@drawable/button_shape"/>
    </LinearLayout>

</LinearLayout>
