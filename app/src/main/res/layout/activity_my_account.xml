<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".login.MyAccountActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_gradient"
    android:padding="@dimen/big_space">

  <TextView
      android:id="@+id/my_account_text_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAllCaps="true"
      app:fontFamily="sans-serif-light"
      android:text="@string/text_my_account"
      android:textColor="@android:color/white"
      android:textSize="@dimen/text_default_size"
      android:textStyle="bold"
      android:gravity="center"/>

  <Button
      android:id="@+id/logout_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/my_account_text_view"
      android:padding="@dimen/general_space"
      android:text="@string/text_logout"
      android:background="@drawable/button_shape"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="@dimen/huge_space"/>

  </RelativeLayout>