<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainScreen.categories.faq.FAQDescriptionActivity"
    android:padding="@dimen/general_space">

    <TextView
        android:id="@+id/question_text"
        android:text="Question here"
        app:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:textSize="@dimen/question_question_size"
        android:textColor="@color/color1_saphire_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/default_space">

    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_text"
        android:layout_above="@id/faq_source_text_view">

        <TextView
            android:id="@+id/answer_text"
            android:text="@string/lorem_ipsum"
            app:fontFamily="sans-serif-light"
            android:textSize="@dimen/text_answer_size"
            android:textColor="@android:color/black"
            android:paddingTop="@dimen/general_space"
            android:lineSpacingExtra="@dimen/little_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>


    <TextView
        android:id="@+id/faq_source_text_view"
        android:text="@string/text_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fontFamily="sans-serif-light"
        android:textSize="@dimen/text_answer_size"
        android:textColor="@android:color/black"
        android:paddingTop="@dimen/default_space"
        android:lineSpacingExtra="@dimen/little_space"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>