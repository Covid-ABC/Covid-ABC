<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_card"
    android:layout_margin="@dimen/little_space"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingPrefix"
        android:background="@color/color1_saphire_blue"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_name_text_view"
            android:text="@string/text_default"
            app:fontFamily="sans-serif-light"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:padding="@dimen/general_space"
            android:layout_toLeftOf="@id/item_count_text_view"/>

        <TextView
            android:id="@+id/item_count_text_view"
            android:text="@string/number_default"
            app:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/general_space"
            android:drawableRight="@drawable/ic_more"
            android:drawableEnd="@drawable/ic_more"
            android:singleLine="true"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>